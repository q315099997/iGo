<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/config_package_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/max_app_restart_time"
        android:theme="@style/ConfigBigTitle" />

    <EditText
        android:id="@+id/max_app_restart_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/max_restart_times_hint"
        android:inputType="number"
        android:maxLines="1"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorHint"
        android:theme="@style/ConfigSubTitle" />

</LinearLayout>
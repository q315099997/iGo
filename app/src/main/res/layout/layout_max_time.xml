<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/config_package_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max_runtime"
            android:theme="@style/ConfigBigTitle" />

        <TextView
            android:id="@+id/max_runtime_tv"
            android:paddingStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/ConfigSubTitle" />
    </LinearLayout>

    <ImageView
        android:id="@+id/choose_max_runtime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_av_timer_black_24dp"
        android:theme="@style/ConfigImageStyle" />
</LinearLayout>